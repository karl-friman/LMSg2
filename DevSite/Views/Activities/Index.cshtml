@using Core.ViewModels;
@model ActivityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Activities</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th width="300">
                @Html.DisplayNameFor(model => model.Activities)
            </th>
            <th>
                Documents
            </th>
            <th>
                Module
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            string classContents = "btn btn-outline-primary";
            <tr>
                <td width="300">
                    <div>
                        @if (Model.SelectedActivity is not null)
                        {
                            if (Model.SelectedActivity == activity)
                            {
                                <div id="selected"></div>
                                classContents = "btn  btn-outline-warning";

                            }
                        }


                        @Html.ActionLink(linkText: activity.Name, actionName: "Index", controllerName: "Activities",
                                         protocol: null, hostname: null, fragment: null,
                                         routeValues: new { selected = activity.Id },
                                         htmlAttributes: new { @class = classContents })

                    </div>
                    <div><strong>@Html.DisplayNameFor(modelItem => activity.Description):</strong> @Html.DisplayFor(modelItem => activity.Description)</div>
                    <div><strong>@Html.DisplayNameFor(modelItem => activity.StartDate):</strong> @Html.DisplayFor(modelItem => activity.StartDate)</div>
                    <div><strong>@Html.DisplayNameFor(modelItem => activity.EndDate):</strong> @Html.DisplayFor(modelItem => activity.EndDate)</div>
                </td>
                <td>
                    @if (activity.Documents != null)
                    {
                        @foreach (var document in activity.Documents)
                        {
                            <div>
                                <a class="btn btn-outline-success" asp-action="Details" asp-controller="Documents" asp-route-id="@document.Id">
                                    @document.Name
                                </a>
                            </div>
                        }
                    }
                    </td>
                <td>
                    <div>

                        @if (activity.Module != null)
                        {
                            <span>
                                @Html.ActionLink(linkText: activity.Module.Name, actionName: "Index", controllerName: "Modules",
                                                      protocol: null, hostname: null, fragment: null,
                                                      routeValues: new { selected = activity.Module.Id },
                                                      htmlAttributes: new { @class = "btn  btn-outline-primary" })
                            </span>
                        }

                        <br />
                    </div>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@activity.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@activity.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@activity.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
