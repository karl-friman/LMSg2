@foreach (var item in Model)
{
    string classContents = "btn btn-outline-primary";

    <h3>
        @Html.ActionLink(linkText: item.Name, actionName: "StudentFilesView", controllerName: "Documents",
               protocol: null, hostname: null, fragment: null,
               routeValues: new { selected = item.LMSUserId },
               htmlAttributes: new { @class = classContents })
    </h3>

    <h3>
        @Html.ActionLink(linkText: item.FilePath, actionName: "StudentFilesView", controllerName: "Documents",
               protocol: null, hostname: null, fragment: null,
               routeValues: new { selected = item.LMSUserId },
               htmlAttributes: new { @class = classContents })
    </h3>

    //<p>@Html.ActionLink(linkText: item.FilePath, actionName: "DownloadFile")</p>

}



