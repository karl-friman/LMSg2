@model Core.ViewModels.LMSUserViewModel
@*@model Core.Entities.LMSUser*@

@{
    ViewData["Title"] = "Details";
    var documentsCount = Model.Documents.Count();
}
<div class="d-flex mt-3 ml-5">
    <div>
        <div class="card border-secondary student-class-card">
            <div class="card-header">
                <h4>Details</h4>
                <hr />

                    <div class="row">
                        <dl class="row">
                            <dt class="col-sm-4">
                                Full name:
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                            <dt class="col-sm-4">
                                Date of Birth:
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>
                            <dt class="col-sm-4">
                                Avatar:
                            </dt>
                            <dd class="col-sm-8"><img src="@Html.DisplayFor(model => model.Avatar)" /></dd>
                            <dt class="col-sm-4">
                                Email:
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                            <dt class="col-sm-4">
                                Phone number:
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                            <dt class="col-sm-4">
                                User type:
                            </dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserType)</dd>
                        </dl>
                    </div>
                    <div>
                        <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a type="button" class="btn btn-outline-info" href="#" onclick="history.go(-1)">Go Back</a>
                    </div>
                </div>

        </div>
    </div>
</div>
