@using Core.ViewModels;
@using Core.Utilities;
@using System.Text;
@using Microsoft.AspNetCore.Html;
@model IEnumerable<LMSUserViewModel>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelitem => item.FullName)
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.Email)
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.PhoneNumber)
                </th>
                <th>
                    <img src="@Html.DisplayFor(modelitem => item.Avatar)" />
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.UserType)
                </th>
                <th>
                    @{
                        if (item.CourseId is not null)
                        {
                            var name = item.Course.Name;
                            @Html.ActionLink(linkText: name, actionName: "Index", controllerName: "Courses",
                                             protocol: null, hostname: null, fragment: null,
                                             routeValues: new { selected = item.Course.Id },
                                             htmlAttributes: new { @class = "btn btn-outline-primary" })
                        }

                    }
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
