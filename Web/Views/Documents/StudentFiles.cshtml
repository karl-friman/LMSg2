


@model UserDocumentViewModel

@{
    ViewData["Title"] = "Documents";

}

<div class="d-flex mt-3 ml-5">
    <div>
        <div class="card border-secondary">
            <div class="card-header">

                <h4>My Files</h4>

                <hr />

                <div class="ml-3">

                    <h5>Course: <br />@Model.CourseName</h5>
                    <div id="courses">


                        <h3>Course Documents</h3>
                        <div class="card ">
                            @foreach (var module in @Model.CourseDocuments)
                            {
                                <div class="card-body">

                                    <p class="card-text font-weight-bold">@module.Name</p>
                                    <p class="card-text">@module.Description</p>

                                    <p type="button" class="">@Html.ActionLink("Download", "DownloadFile", new { fileName = module.Name }, htmlAttributes: new { @class = "btn btn-outline-info" })</p>

                                </div>
                                <hr />
                            }
                        </div>


                    </div>

                    <div>
                

                        <div id="modules">

                            <h3>Module Documents</h3>
                            <div class="card ">
                                @foreach (var module in @Model.ModuleViewModels)
                                {
                                    <div class="card-body">

                                        <p class="card-text font-weight-bold">@module.Name</p>
                                        <p type="button" class="">@Html.ActionLink("Download", "DownloadFile", new { fileName = module.Name }, htmlAttributes: new { @class = "btn btn-outline-info" })</p>

                                    </div>
                                    <hr />
                                }

                            </div>


                        </div>
                    </div>

                    <div>

                        <div id="activities">

                            <h3>Activity Documents</h3>
                            <div class="card ">
                                @foreach (var activity in @Model.ModuleViewModels)
                                {
                                    <div class="card-body">

                                        <p class="card-text font-weight-bold">@activity.Name</p>
                                        <p class="">@Html.ActionLink("Download", "DownloadFile", new { fileName = activity.Name }, htmlAttributes: new { @class = "btn btn-outline-info" })</p>

                                    </div>
                                    <hr />
                                }
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(function () {
        var icons = {
            header: "ui-icon-circle-arrow-e",
            activeHeader: "ui-icon-circle-arrow-s"
        };
        $("#courses").accordion({
            collapsible: true,
            heightStyle: "content",
            active: false,
            icons: icons
        });
        $("#toggle").button().on("click", function () {
            if ($("#courses").accordion("option", "icons")) {
                $("#courses").accordion("option", "icons", null);
            } else {
                $("#courses").accordion("option", "icons", icons);
            }
        });
        $("#modules").accordion({
            collapsible: true,
            heightStyle: "content",
            active: false,
            icons: icons
        });
        $("#toggle").button().on("click", function () {
            if ($("#modules").accordion("option", "icons")) {
                $("#modules").accordion("option", "icons", null);
            } else {
                $("#modules").accordion("option", "icons", icons);
            }
        });
        $("#activities").accordion({
            collapsible: true,
            heightStyle: "content",
            active: false,
            icons: icons
        });
        $("#toggle").button().on("click", function () {
            if ($("#activities").accordion("option", "icons")) {
                $("#activities").accordion("option", "icons", null);
            } else {
                $("#activities").accordion("option", "icons", icons);
            }
        });
    });
</script>

